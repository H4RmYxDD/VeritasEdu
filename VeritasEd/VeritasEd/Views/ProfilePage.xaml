<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VeritasEd.Views.ProfilePage"
             Title="Profile"
             BackgroundColor="{StaticResource BackgroundColor}">
    <VerticalStackLayout Padding="24,36" Spacing="24">
        <Frame BackgroundColor="{StaticResource CardColor}" CornerRadius="14" Padding="20" HasShadow="True">
            <VerticalStackLayout Spacing="14">
                <Label Text="Profile" FontAttributes="Bold" FontSize="24" TextColor="{StaticResource AccentColor}" HorizontalOptions="Center"/>
                <Label x:Name="UsernameLabel" FontSize="18" TextColor="{StaticResource TextPrimaryColor}" />
                <Label x:Name="RoleLabel" FontSize="16" TextColor="{StaticResource TextSecondaryColor}" />
                <Button Text="Logout"
                        Clicked="OnLogoutClicked"
                        BackgroundColor="{StaticResource ButtonColor}"
                        TextColor="{StaticResource ButtonTextColor}"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        HeightRequest="44"
                        Margin="0,20,0,0"/>
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>