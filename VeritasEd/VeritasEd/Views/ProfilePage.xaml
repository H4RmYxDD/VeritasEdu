<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VeritasEd.Views.ProfilePage"
             Title="Profile"
             BackgroundColor="{DynamicResource BackgroundColor}">
    <ScrollView>
        <VerticalStackLayout Padding="24,60" Spacing="32">
            <Frame BackgroundColor="{DynamicResource PrimaryColor}" CornerRadius="16" Padding="18" HasShadow="True">
                <Label Text="My Profile"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource TextPrimaryColor}"
                       HorizontalOptions="Center" />
            </Frame>
            <Frame BackgroundColor="{DynamicResource CardColor}" CornerRadius="14" Padding="24" HasShadow="True">
                <VerticalStackLayout Spacing="18" HorizontalOptions="Center">
                    <!-- Profile Picture -->
                    <Image Source="{Binding ProfileImageUrl}"
                           WidthRequest="100"
                           HeightRequest="100"
                           Aspect="AspectFill"
                           BackgroundColor="{DynamicResource EntryBackgroundColor}"
                           Margin="0,0,0,10"/>
                    <Button Text="Change Picture"
                            Clicked="OnChangePictureClicked"
                            BackgroundColor="{DynamicResource ButtonColor}"
                            TextColor="{DynamicResource ButtonTextColor}"
                            FontSize="14"
                            HeightRequest="32"
                            WidthRequest="140"
                            CornerRadius="16"
                            HorizontalOptions="Center"/>
                    <Entry x:Name="UsernameEntry"
                           Text="{Binding Username}"
                           Placeholder="Username"
                           FontSize="20"
                           TextColor="{DynamicResource TextPrimaryColor}" />
                    <Entry x:Name="RoleEntry"
                           Text="{Binding Role}"
                           Placeholder="Role"
                           FontSize="18"
                           TextColor="{DynamicResource AccentColor}" 
                           IsReadOnly="True"/>
                    <Button Text="Save Changes"
                            Clicked="OnSaveChangesClicked"
                            BackgroundColor="{DynamicResource ButtonColor}"
                            TextColor="{DynamicResource ButtonTextColor}"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            HeightRequest="44"/>
                </VerticalStackLayout>
            </Frame>
            <Button Text="Logout"
                    Clicked="OnLogoutClicked"
                    BackgroundColor="{DynamicResource ButtonColor}"
                    TextColor="{DynamicResource ButtonTextColor}"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    HeightRequest="44"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>