<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VeritasEd.Views.LoginPage"
             Title="Login"
             BackgroundColor="{StaticResource BackgroundColor}">
    <ScrollView>
        <VerticalStackLayout Padding="24,60" Spacing="32">
            <Frame BackgroundColor="{StaticResource PrimaryColor}" CornerRadius="16" Padding="18" HasShadow="True">
                <Label Text="Welcome to VeritasEd"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="{StaticResource TextPrimaryColor}"
                       HorizontalOptions="Center" />
            </Frame>
            <Frame BackgroundColor="{StaticResource CardColor}" CornerRadius="14" Padding="24" HasShadow="True">
                <VerticalStackLayout Spacing="18">
                    <Label Text="Login" FontAttributes="Bold" FontSize="22" TextColor="{StaticResource AccentColor}" HorizontalOptions="Center"/>
                    <Entry x:Name="UsernameEntry"
                           Placeholder="Username"
                           BackgroundColor="{StaticResource EntryBackgroundColor}"
                           TextColor="{StaticResource EntryTextColor}"
                           HeightRequest="44"
                           FontSize="16"/>
                    <Entry x:Name="PasswordEntry"
                           Placeholder="Password"
                           IsPassword="True"
                           BackgroundColor="{StaticResource EntryBackgroundColor}"
                           TextColor="{StaticResource EntryTextColor}"
                           HeightRequest="44"
                           FontSize="16"/>
                    <Button Text="Login"
                            Clicked="OnLoginClicked"
                            BackgroundColor="{StaticResource ButtonColor}"
                            TextColor="{StaticResource ButtonTextColor}"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            HeightRequest="44"/>
                    <Button Text="Register"
                            Clicked="OnRegisterClicked"
                            BackgroundColor="{StaticResource CardColor}"
                            TextColor="{StaticResource AccentColor}"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            HeightRequest="44"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>